<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/nav_graph"
    app:startDestination="@id/coinsListFragment">
    <fragment
        android:id="@+id/coinsListFragment"
        android:name="com.example.cryptomarket.ui.coins_list.CoinsListFragment"
        android:label="CoinsListFragment" >
        <action
            android:id="@+id/action_coinsListFragment_to_coinDetailsFragment"
            app:destination="@id/coinDetailsFragment" />
    </fragment>
    <fragment
        android:id="@+id/coinDetailsFragment"
        android:name="com.example.cryptomarket.ui.coin_details.CoinDetailsFragment"
        android:label="CoinDetailsFragment" >
        <argument
            android:name="uuid"
            app:argType="string" />
    </fragment>
</navigation>